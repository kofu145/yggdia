$border-color-nofocus: $panel;
$border-title-color-nofocus: $panel;
$border-color-focus: white;
$border-title-color-focus: white;


Placeholder {
    height: 100%;
}

Header {
    height: 3;
    dock: top;
}

#ctree {
    width: 30%;
    layout: grid;
    grid-size: 1 1;
}

#ButtonContainer {
    margin: 1 1 1 1;
    height: auto;
}

Label{
    margin: 1 1 1 4;
}

TextArea{
    margin: 1 2 1 4;
    height: auto;
    border: round $border-color-nofocus;
    border-title-color: $border-title-color-nofocus;
    background: $background;

}

Input{
    margin: 1 2 1 4;
}

Select {
    margin: 0 4;
}

#input {
    width:70%;
    border: round $border-color-nofocus;
    border-title-color: $border-title-color-nofocus;
    background: $background;
}
#input:focus-within {
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
}

#tabs {
}

#new {
    content-align: center middle;
    width: 70%;
    height: 90%;
    layer: above;
    align: center middle;
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
}

#save_prompt {
    content-align: center top;
    width: 50%;
    height: 25%;
    layer: above;
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
}

#save_buttons{
    width: 100%;
    height: auto;
    padding: 1 5;
}

.save_button{
    width: 1fr;
}

.save_question {
    text-style: bold;
    height: 50%;
    padding: 3 1 1 1;
    content-align: center top;
}

Screen {
    align: center middle;
}

#dtree {
    row-span: 1;
    column-span: 1;
    border: round $border-color-nofocus;
    border-title-color: $border-title-color-nofocus;
    background: $background;
}   

#dtree:focus-within {
    border: round $border-color-focus;
    border-title-color: $border-title-color-focus;
}


#editor {
    row-span: 2;
    column-span: 4;
    border: round $border-color-nofocus;
    border-title-color: $border-title-color-nofocus;
}

#content {
    row-span: 2;
    column-span: 4;
    border: round $border-color-nofocus;
    border-title-color: $border-title-color-nofocus;
}
